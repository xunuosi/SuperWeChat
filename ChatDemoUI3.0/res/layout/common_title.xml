<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/common_title_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/black2"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >
    <ImageView
        android:id="@+id/ctitle_ivback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_white_back"
        android:visibility="gone"
        android:contentDescription="@string/register"
        />
    <View
        android:id="@+id/ctitle_view_left"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/ctitle_ivback"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/ctitle_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/register"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/ctitle_tvLeft"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/wei_xin"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/ctitle_view_left"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/ctitle_ivAdd"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:src="@drawable/icon_add"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/ctitle_btRight"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:background="@color/green"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/send"
        android:textColor="@color/white"
        android:visibility="gone"/>
</RelativeLayout>