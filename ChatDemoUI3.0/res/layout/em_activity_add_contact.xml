<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/black2"
                android:padding="5dp">

    <ImageView
        android:id="@+id/ac_ivback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/register"
        android:src="@drawable/arrow_white_back"
        android:visibility="visible"
        />

    <View
        android:id="@+id/ac_view_left"
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/ac_ivback"
        android:background="@color/black"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/ac_ivSearch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/ac_view_left"
        android:src="@drawable/search_white"/>

    <EditText
        android:id="@+id/ac_etSearch"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/ac_ivSearch"
        android:background="@null"
        android:textCursorDrawable="@null"
        android:hint="@string/search"
        android:textColorHint="@color/text_color_hint"
        android:textSize="16sp"
        android:textColor="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/ac_etSearch"
        android:layout_toRightOf="@id/ac_view_left"
        android:background="@color/green"/>
</RelativeLayout>